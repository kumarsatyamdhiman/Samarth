<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # 1. Handle Authorization Header
    # Crucial for API tokens (Bearer tokens) to pass through to Laravel
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # 2. Redirect Trailing Slashes If Not A Folder
    # Example: /home/ -> /home
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # 3. Handle Front Controller
    # Redirects everything to index.php inside the current folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# 4. Deny access to hidden files (Apache 2.4 Syntax)
# Blocks access to .env, .git, etc., but allows .well-known (for SSL)
<FilesMatch "^\.(?!well-known)">
    Require all denied
</FilesMatch>
